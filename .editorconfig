# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

# This is the root editorconfig file (stop searching parent directories)
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C source files
[*.{c,h}]
indent_style = tab
indent_size = 8
tab_width = 8

# Makefile (must use tabs)
[Makefile]
indent_style = tab
indent_size = 8
tab_width = 8

# Shell scripts
[*.sh]
indent_style = tab
indent_size = 8
tab_width = 8

# Configuration files (INI-style)
[*.{ini,rc}]
indent_style = space
indent_size = 4

# Markdown documentation
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Help files and plain text
[*.{txt,hlp}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
